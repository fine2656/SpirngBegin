<!-- ==== #17. mapper 기본설정 ==== -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<!-- ==== #18. 루트 엘리먼트 & 네임스페이스 설정 (프로젝트 전체 내에서 유일해야 한다) ==== -->
<mapper namespace="examdb">
 <!-- 넘어온 데이타 타입은 String -->
<update id="mbtest2" parameterType="String">
	update spring_mybatistest set name = #{name} 
	where no = 1
</update>
</mapper>
<!-- 넘어온 파라미터 타입의 변수 -->